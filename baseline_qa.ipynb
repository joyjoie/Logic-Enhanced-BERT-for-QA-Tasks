    "eval_df = pd.read_csv('./eval.csv')\n",
    "\n",
    "relevant_columns = ['logical_form', 'context', 'answers','labels','question' ]\n",
    "eval_filtered_df = eval_df[relevant_columns]\n",
    "\n",
    "eval_data = eval_filtered_df.to_dict(orient='records')\n",
    "\n",
    "inputs = tokenize_data(eval_data, tokenizer)\n",
    "\n",
    "valid_dataset = QADataset(inputs)  \n",
    "valid_dataloader = DataLoader(valid_dataset, batch_size=2, collate_fn=collate_fn)"
   ]
  },
  {
   "cell_type": "code",
