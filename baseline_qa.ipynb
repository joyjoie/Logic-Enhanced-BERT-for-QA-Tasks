   "source": [
    "model.eval() \n",
    "total_correct = 0\n",
    "total_samples = 0\n",
    "\n",
    "with torch.no_grad():\n",
    "    for batch in tqdm(valid_dataloader, desc=\"Evaluating\"):\n",
    "        input_ids = batch['input_ids']\n",
    "        attention_mask = batch['attention_mask']\n",
    "        start_positions = batch['start_positions']\n",
    "        end_positions = batch['end_positions']\n",
    "\n",
    "        try:\n",
    "            outputs = model(\n",
    "                input_ids=input_ids,\n",
    "                attention_mask=attention_mask,\n",
    "            )\n",
    "        except Exception as e:\n",
    "            total_error += 1\n",
    "            continue\n",
    "\n",
    "        start_logits = outputs['start_logits']\n",
    "        end_logits = outputs['end_logits']\n",
    "\n",
    "        # Get predicted start and end positions\n",
    "        pred_starts = torch.argmax(start_logits, dim=1)\n",
    "        pred_ends = torch.argmax(end_logits, dim=1)\n",
    "\n",
    "        # Decode predictions and check correctness\n",
    "        for i in range(input_ids.size(0)):\n",
    "    \n",
    "            # Decode predicted span\n",
    "            start_idx = pred_starts[i].item()\n",
    "            end_idx = pred_ends[i].item()\n",
    "            predicted_tokens = input_ids[i][start_idx:end_idx + 1]\n",
    "            predicted_text = tokenizer.decode(predicted_tokens, skip_special_tokens=True)\n",
    "\n",
    "            # Decode ground truth span\n",
    "            ground_truth_start = start_positions[i].item()\n",
    "            ground_truth_end = end_positions[i].item()\n",
    "            ground_truth_tokens = input_ids[i][ground_truth_start:ground_truth_end + 1]\n",
    "            ground_truth_text = tokenizer.decode(ground_truth_tokens, skip_special_tokens=True)\n",
    "\n",
    "            if ground_truth_text.lower().strip() == \"\":\n",
    "                continue\n",
    "            else: \n",
    "                total_samples += 1\n",
    "\n",
    "            if ground_truth_text.lower() in predicted_text.lower():\n",
    "                total_correct += 1\n",
    "            if predicted_text.lower() in ground_truth_text.lower():\n",
    "                total_correct += 1\n",
    "\n",
    "# Calculate and print accuracy\n",
    "accuracy = total_correct / total_samples if total_samples > 0 else 0.0\n",
    "print(f\"Evaluation Accuracy (Substring Match): {accuracy:.4f}\")"
   ]
  }
